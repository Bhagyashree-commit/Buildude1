<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Contractor.AppliedJobs"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_900"
        >

        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="CONTRACTOR DASHBOARD"
            android:textColor="#FFFFFF"></TextView></RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/_50sdp"
        >

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycleViewjobs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_margin="@dimen/md_15"
    android:outlineSpotShadowColor="@color/red_400"
    android:divider="@color/colorPrimaryDark"
    android:dividerHeight="15dp"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>